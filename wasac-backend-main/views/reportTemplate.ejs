<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Report</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      width: 90%;
      margin: 0 auto;
      padding: 20px;
    }
    h1 {
      text-align: center;
      color: #4D90C9;
    }
    .section {
      margin-bottom: 40px;
    }
    .section h2 {
      color: #4D90C9;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    table, th, td {
      border: 1px solid #ddd;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #4D90C9;
      color: white;
    }
    .logo {
      width: 150px;
      display: block;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  <div class="container">
   
    <h1>Admin Report</h1>
    
    <div class="section">
      <h2>Application Status</h2>
      <table>
        <tr>
          <th>Status</th>
          <th>Count</th>
        </tr>
        <% applicationStatus.forEach(status => { %>
          <tr>
            <td><%= status.status %></td>
            <td><%= status.count %></td>
          </tr>
        <% }) %>
      </table>
    </div>

    <div class="section">
      <h2>Claim Status</h2>
      <table>
        <tr>
          <th>Status</th>
          <th>Count</th>
        </tr>
        <% claimStatus.forEach(status => { %>
          <tr>
            <td><%= status.status %></td>
            <td><%= status.count %></td>
          </tr>
        <% }) %>
      </table>
    </div>

    <div class="section">
      <h2>Applications by Month</h2>
      <table>
        <tr>
          <th>Month</th>
          <th>Count</th>
        </tr>
        <% applicationsByMonth.forEach(month => { %>
          <tr>
            <td><%= month.month %></td>
            <td><%= month.count %></td>
          </tr>
        <% }) %>
      </table>
    </div>
  </div>
</body>
</html>
